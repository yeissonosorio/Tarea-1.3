<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea_1._3.Views.Lista_Autores"
             Title="Autores">
    <StackLayout>
        <SearchBar x:Name="SearchBarAutores"
           Placeholder="Buscar autor..."
           SearchCommand="{Binding BuscarAutoresCommand}" />
        <StackLayout>
            <ListView ItemsSource="{Binding PersonasList}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <StackLayout Orientation="Horizontal">
                                    <StackLayout HorizontalOptions="StartAndExpand">
                                        <Label Text="{Binding Nombre}" FontSize="Medium" />
                                        <Label Text="{Binding Pais}" FontSize="Medium" />
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</ContentPage>